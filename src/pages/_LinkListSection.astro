---
import { isDevelopment, withBaseUrl } from "@/helper";

/**
 * リンク一覧セクション
 */
---

<section class="section">
  <div class="container is-max-desktop is-flex is-flex-direction-column">
    <h2 id="link" class="jump-anchor-header-padding title">
      <a href={withBaseUrl("#link")} class="has-text-black">リンク</a>
    </h2>
    <ul class="is-size-5">
      <li>
        <a
          href={withBaseUrl("/dormitory/")}
          class="has-text-weight-bold is-underlined">ボイボ寮</a
        >
      </li>
      <li>
        <a
          href={withBaseUrl("/how_to_use/")}
          class="has-text-weight-bold is-underlined">使い方</a
        >
      </li>
      <li>
        <a
          href={withBaseUrl("/term/")}
          class="has-text-weight-bold is-underlined">利用規約</a
        >
      </li>
      <li>
        <a href={withBaseUrl("/qa/")} class="has-text-weight-bold is-underlined"
          >Q&amp;A</a
        >
      </li>
      <li>
        <a
          href={withBaseUrl("/update_history/")}
          class="has-text-weight-bold is-underlined">変更履歴</a
        >
      </li>
      {
        isDevelopment && (
          <li>
            <a
              href={withBaseUrl("/news/")}
              class="has-text-weight-bold is-underlined"
            >
              ニュース
            </a>
          </li>
        )
      }
      <li>
        <a
          href="https://hiho.fanbox.cc/"
          target={"_blank"}
          rel={"noreferrer"}
          class="has-text-weight-bold is-underlined">pixivFANBOX</a
        >
      </li>
    </ul>
  </div>
</section>
